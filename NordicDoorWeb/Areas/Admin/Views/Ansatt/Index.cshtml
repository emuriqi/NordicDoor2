@model IEnumerable<AnsattModel>

<h1>Opprett</h1>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Ansattsliste</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Ansatt" asp-action="Opprett" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Opprett nytt forslag
            </a>
        </div>
    </div>
    <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    AnsattID
                <th>
                    ForNavn
                </th>
                <th>
                    EtterNavn
                </th>
                <th>
                    Team
                </th>
                <th>
                    Rolle
                </th>


                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="20%">
                        @obj.Id
                    </td>
                    <td width="20%">
                        @obj.Fornavn
                    </td>
                    <td width="20%">
                        @obj.Etternavn
                    </td>
                    <td width="20%">
                        @obj.Team
                    </td>
                    <td width="20%">
                        @obj.Rolle
                    </td>

                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Ansatt" asp-action="Rediger" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2"> <i class="bg-info bi-pencil-square"></i> Rediger</a>
                            <a asp-controller="Ansatt" asp-action="Slett" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Slett</a>
                        </div>

                    </td>

                </tr>


            }
        </tbody>
    </table>
</div>
